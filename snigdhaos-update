#!/bin/bash
# shellcheck disable=SC2015



set -e

minimal_pacman_conf() {
	local TEMP_CONF
	TEMP_CONF=$(mktemp)
	echo -e "[hawkeye]\nServer = https://snigdhalinux.github.io/hawkeye/x86_64" >"$TEMP_CONF"
	echo "$TEMP_CONF"
}

self_update() {
	# Let the update script self update
	local EXTRA_PARAMS=()
	[ "$DATABASE_UPDATED" != "true" ] && $PACMAN -Sy && DATABASE_UPDATED=true || true
	$INT
	[ "$DATABASE_UPDATED" != "true" ] && local MIN_PACMAN_CONF && MIN_PACMAN_CONF="$(minimal_pacman_conf)" && $PACMAN --config "$MIN_PACMAN_CONF" -Syy && EXTRA_PARAMS=("--config" "$MIN_PACMAN_CONF") || true
	$INT
	if $PACMAN "${EXTRA_PARAMS[@]}" -Qu snigdhaos-update &>/dev/null; then
		if ! SNAP_PAC_SKIP=y SKIP_AUTOSNAP='' $PACMAN "${EXTRA_PARAMS[@]}" -Sdd garuda-update --needed --noconfirm; then
			$INT
			# Create unshare'd mount namespace and mount an empty tmpfs on /usr/share/libalpm/hooks
			unshare -m bash -c 'mount -t tmpfs tmpfs /usr/share/libalpm/hooks && eval "$@"' -- SNAP_PAC_SKIP=y SKIP_AUTOSNAP='' "$PACMAN" "${EXTRA_PARAMS[@]}" --hookdir "/usr/share/libalpm/hooks" -Sdd snigdhaos-update --needed --noconfirm || true
		fi
		$INT
		GARUDA_UPDATE_SELFUPDATE=1 exec /usr/bin/snigdhaos-update "$@"
	fi
	# Check if we have received sigint and should exit
	$INT
}

# Some funny stuff with reflector makes it not exit on sigint, we set up our own sigint handler for that
INT=true
trap "INT=false" INT

# Elevate once and stop asking for the password constantly
if [[ $EUID -ne 0 ]]; then
	exec sudo --preserve-env="SKIP_MIRRORLIST,UPDATE_AUR,PACMAN_EXE,GARUDA_SNAPSHOT_PACMAN,PACMAN_EXTRA_OPTS" /usr/bin/snigdhaos-update "$@"
	exit 1
fi

# Run the "I'm too lazy to fix it myself all in one" script
if [ "$1" == "remote" ]; then
	exec bash -c "VERSION=6 . <(wget -qO- https://garudalinux.org/os/garuda-update/remote-update) \"\$@\"" remote-update "${@:2}"
fi

if [ -n "$PACMAN_EXE" ]; then
	PACMAN="$PACMAN_EXE"
else
	PACMAN="pacman"
fi

export PACMAN

DATABASE_UPDATED=false
if [ -n "$GARUDA_UPDATE_SELFUPDATE" ]; then
	DATABASE_UPDATED=true
fi

self_update "$@"

# shellcheck disable=1091
source /usr/lib/garuda/garuda-update/main-update
